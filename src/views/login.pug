extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="ID", type="text", placeholder="ID", required)
        input(name="password", type="password", placeholder="Password", required)
        input(type="submit", value="Login")

    hr
    div
        span Don't have an account? 
        a(href="/join") Create one now &rarr;